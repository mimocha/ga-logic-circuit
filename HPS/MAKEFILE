#
CC = arm-linux-gnueabihf-g++
MAIN = ga-main.cpp
OUTPUT = ga
CFLAGS = -g -Wall -std=c++11
INCLUDE = -I../hwlib/include/ -I../hwlib/include/soc_cv_av/ -I../ref/

# Cross Compile for ARM
arm :
	$(CC) $(CFLAGS) $(INCLUDE) $(MAIN) -o $(OUTPUT).o

# Complile for PC
pc :
	g++ $(CFLAGS) $(INCLUDE) $(MAIN) -o $(OUTPUT).exe

clean :
	rm -f $(TARGET) *.a *.o *.exe

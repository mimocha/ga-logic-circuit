# ================================================================
# VARIABLES
# ================================================================

# Cross Compiler
CC = arm-linux-gnueabihf-g++
# Compiler Flags
CFLAGS = -g -Wall -std=c++11
# Compiler Include (Altera Libraries)
INCLUDE = -I../hwlib/include/ -I../hwlib/include/soc_cv_av/ -I../ref/
# Output program name
OUTPUT = ga.prog

# ================================================================
# X86 PC COMPILATION
# ================================================================



# ================================================================
# ARM COMPILATION
# ================================================================

# Cross Compile Recipe for ARM
arm : arm-ca arm-main arm-link clean

# Compile CA File
arm-ca :
	$(CC) $(CFLAGS) ca.cpp -o ca.o -c

# Compile GA Main File
arm-main :
	$(CC) $(CFLAGS) $(INCLUDE) ga-main.cpp -o ga-main.o -c

# Links together all the files
arm-link : ga-main.o ca.o
	$(CC) -o $(OUTPUT) ga-main.o ca.o

# ================================================================
# DUMMY OPTIONS
# ================================================================

.PHONY: clean
clean :
	rm -f $(TARGET) *.a *.o

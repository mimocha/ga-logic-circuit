#
SOURCE = hps-main
TARGET = hps-eval
CC = arm-linux-gnueabihf-g++

# Command: "make" or "make build"
build: $(TARGET)
# Step 2: Convert $(TARGET).o -> $(TARGET) with command below
$(TARGET): $(TARGET).o
	$(CC) -g -Wall $(TARGET).o -o $(TARGET)
# Step 1: Convert $(SOURCE).cpp -> $(TARGET).o with command below
$(TARGET).o: $(SOURCE).cpp
	$(CC) -g -Wall -c $(SOURCE).cpp -o $(TARGET).o

# Command: "make clean"
clean:
	rm -f $(TARGET) *.a *.o *~

# mingw32-make.exe MAKEFILE
#
TARGET = hps-eval

#
CROSS_COMPILE = arm-linux-gnueabilhf-
CFLAGS = -g -Wall -I ${SOCEDS_DEST_ROOT}/ip/altera_hps/hwlib/include
LDFLAGS = -g -Wall
CC = ${CROSS_COMPILE}g++
ARCH = arm

build: $(TARGET)

$(TARGET): hps-main.o
	$(CC) $(LDFLAGS) $^ -o $@

%.o : %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: clean
clean:
	rm -f $(TARGET) *.a *.o *~

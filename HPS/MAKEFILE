#
CC = arm-linux-gnueabihf-g++
SOURCE = ga-main.cpp
TARGET = ga-program.exe
HEADER = ga-main.h cellgen.h
FLAGS = -g -Wall -std=c++11

# Build for x86
build :
	g++ $(FLAGS) $(SOURCE) -o $(TARGET)

# Cross Compile for ARM
build-arm :
	$(CC) $(FLAGS) $(SOURCE) -o $(TARGET)

clean :
	rm -f $(TARGET) *.a *.o *.exe
